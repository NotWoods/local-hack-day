{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/",
    "./tests/"
  ]
}
