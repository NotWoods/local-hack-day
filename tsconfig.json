{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "noEmit": true,
    // "lib": [],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/",
    "./tests/"
  ]
}
